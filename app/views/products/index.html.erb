

<div class  = 'row'>
	<h3 style ='margin-left:300px;'>All Products </h3>
	<table  class ='table table-striped'>
		<tr>
			<th>Product</th>
			<th>Seller</th>
			<th>Date Posted</th>
			<th>Amount</th>
			<th>Action</th>
		</tr>
		<% @products.each do  |t| %>			
			<tr>
				<td><%=t.name%></td>
				<td><%= User.find(t.poster_id).first_name %></td>
				<td><%= t.created_at %></td>
				<td>$<%=t.amount %></td>
				<td><%= link_to 'Buy', {:controller => "products", :action => "purchase", :product_id => t.id}, {:method=>:post} %></td>
			</tr>
		<% end %>

	</table>



</div>


