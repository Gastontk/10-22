<div class = 'row'>
	<h5 style = 'color:red;'><%= flash[:alert] if flash[:alert] %></h5> <br>
	<h3>Sell Product:</h3>
	<div class= 'col-md-4'>
		<%=bootstrap_form_for @product  do |t| %>
			<%= t.text_field :name, placeholder: 'Product Name' %>
			<%= t.number_field :amount, label: '$Price', placeholder: '$00.00', step: :any %>
			<%= t.submit 'Sell', class: 'btn btn-primary pull-right' %>
		<% end %> <br> <br>
	</div>
</div>
<br> <br> <br>
<div class = 'row'>
	Your Products that are not yet sold: <br>
	
	<table class = 'table table-bordered'>
		<tr>
			<th>Product</th>
			<th>Date Posted</th>
			<th>Amount</th>
			<th>Action</th>
		</tr>
		<% @for_sale.each do  |t| %>
			<tr>
				<td><%= t.name %></td>
				<td><%= t.created_at %></td>
				<td><%= number_to_currency(t.amount)%></td>
				<td><%= link_to 'destroy', {:controller => "products", :action => "destroy", :product_id => t.id}, {:method=>:delete}%></td>
			</tr>
		<% end %>
		
	</table>
</div>

<div class = 'row'>
	Sales <br>
		<table class = 'table table-bordered'>
		<tr>
			<th>Product</th>
			<th>Date Sold</th>
			<th>Buyer</th>
			<th>Amount</th>

		</tr>
		<% @sold.each do  |t| %>
			<tr>
				<td><%= t.name %></td>
				<td><%= t.updated_at %></td>
				<td><%= User.find_by_id(t.owner_id).first_name %> <%= User.find_by_id(t.owner_id).last_name %></td>
				<td><%= number_to_currency(t.amount)%></td>
				
			</tr>
		<% end %>
		
	</table>

</div>
<h4 class ='pull-right'>Total: <%= @sold.sum(:amount)%>.00 dollars. </h4>
<div class = 'row'>
	Purchases <br>
		<table class = 'table table-bordered'>
		<tr>
			<th>Product</th>
			<th>Date Sold</th>
			<th>Seller</th>
			<th>Amount</th>

		</tr>
		<% @purchases.each do  |t| %>
			<tr>
				<td><%= t.name %></td>
				<td><%= t.updated_at %></td>
				<td><%= User.find_by_id(t.poster_id).first_name %> <%= User.find_by_id(t.poster_id).last_name %></td>				<td><%= number_to_currency(t.amount)%></td>
			</tr>
		<% end %>
	</table>

</div>
<h4 class ='pull-right'>Total: <%= @purchases.sum(:amount)%>.00 dollars. </h4>
